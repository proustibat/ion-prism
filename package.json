{
  "name": "ion-prism",
  "version": "2.0.7",
  "description": "Ionic directive to display code blocks in Ionic 3 apps",
  "main": "index.ts",
  "scripts": {
    "tslint": "./node_modules/.bin/tslint -c tslint.json index.ts",
    "tslint:codeclimate": "./node_modules/.bin/tslint -c tslint-codeclimate.json index.ts",
    "build": "npm run tslint:codeclimate && tsc --noStrictGenericChecks",
    "publish": "npm run build",
    "postversion": "git push origin master --tags",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/proustibat/ion-prism.git"
  },
  "keywords": [
    "ionic",
    "ionic 2",
    "ionic 3",
    "directive",
    "ionic directive",
    "prismjs",
    "prism.js",
    "typescript",
    "typescript 2",
    "angular",
    "angular 2"
  ],
  "author": "Proustibat",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/proustibat/ion-prism/issues"
  },
  "homepage": "https://github.com/proustibat/ion-prism#readme",
  "dependencies": {
    "@angular/common": "5.2.1",
    "@angular/compiler": "5.2.1",
    "@angular/compiler-cli": "5.2.1",
    "@angular/core": "5.2.1",
    "@angular/forms": "5.2.1",
    "@angular/http": "5.2.1",
    "@types/prismjs": "^1.9.0",
    "ionic-angular": "3.9.2",
    "prismjs": "1.11.0",
    "rxjs": "5.5.6",
    "typescript": "2.6.2",
    "zone.js": "0.8.20"
  },
  "devDependencies": {
    "codelyzer": "^4.1.0",
    "commitizen": "2.9.6",
    "cz-conventional-changelog": "2.1.0",
    "tslint": "5.9.1",
    "tslint-ionic-rules": "0.0.17"
  },
  "typings": "./index.d.ts",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
